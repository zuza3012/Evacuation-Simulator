<Window x:Class="Ha.GraphSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ha"
        mc:Ignorable="d"
        Title="Graph Settings" Height="300" Width="400">
    <Grid>
        <Label Content="Panic Step (0-1): " HorizontalAlignment="Left" Margin="39,53,0,0" VerticalAlignment="Top"/>

        <Label  HorizontalAlignment="Left" Margin="39,107,0,0" VerticalAlignment="Top" Width="167">
            <Label.Content>
                <TextBlock Width="157" Height="28">
                 <Run Text="Number of evacuations "/><LineBreak/><Run Text="(to calculate average time evacuation)" FontSize="8"/>
                </TextBlock>
            </Label.Content>
        </Label>
        <TextBox x:Name="TbStep" HorizontalAlignment="Left" Height="23" Margin="241,57,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TbNumberOfEvacuations" HorizontalAlignment="Left" Height="23" Margin="241,111,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSet" Content="Set" HorizontalAlignment="Left" Margin="156,194,0,0" VerticalAlignment="Top" Width="75" Click="SetParameters"/>


    </Grid>
</Window>
